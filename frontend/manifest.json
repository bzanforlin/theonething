{
  "manifest_version": 3,
  "name": "The One Thing",
  "version": "1.0",
  "description": "Helps you say the thing that matters most in your meetings.",
  "action": {
    "default_popup": "one.html"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:5000/",
    "http://127.0.0.1:5000/",
    "https://theonething.onrender.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["monitor.html", "monitor.js", "monitor.css"],
      "matches": ["<all_urls>"]
    }
  ]
}